/* pages/index/index.wxss - Glassmorphism Design Style */

.container {
  padding: 16px;
  padding-bottom: 80px; /* 为底部导航栏留出空间 */
  background: transparent;
  min-height: calc(100vh - 60px); /* 减去导航栏高度 */
  box-sizing: border-box;
}

/* ============================================
   Search Bar - Glassmorphism
   ============================================ */
.search-bar {
  margin-bottom: 24px;
  padding: 0;
}

.search-input {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  padding: 12px 20px;
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.search-input:active {
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.08);
  transform: scale(0.99);
}

.icon-search {
  margin-right: 8px;
  color: rgba(26, 26, 26, 0.7);
  font-size: 18px;
  opacity: 0.8;
}

.search-input-field {
  flex: 1;
  font-size: 15px;
  color: #1a1a1a;
  background-color: transparent;
  border: none;
}

.search-input-field::placeholder {
  color: rgba(26, 26, 26, 0.5);
  opacity: 0.8;
}

.icon-clear {
  margin-left: 8px;
  color: rgba(26, 26, 26, 0.7);
  font-size: 16px;
  padding: 4px;
  opacity: 0.8;
  transition: opacity 0.15s ease-out;
}

.icon-clear:active {
  opacity: 1;
}

/* 语音按钮 */
/* 语音唤醒指示器（类似Siri的视觉反馈） */
.wake-indicator {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 998;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.wake-pulse {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: rgba(74, 144, 226, 0.3);
  animation: wakePulse 2s ease-in-out infinite;
  position: relative;
}

.wake-pulse::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(74, 144, 226, 0.6);
  animation: wakePulseInner 2s ease-in-out infinite;
}

@keyframes wakePulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.1;
  }
}

@keyframes wakePulseInner {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.6;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.3);
    opacity: 0.3;
  }
}

.wake-indicator .wake-text {
  margin-top: 16px;
  padding: 6px 12px;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 12px;
  color: #fff;
  font-size: 12px;
  white-space: nowrap;
  opacity: 0.8;
}

.voice-btn {
  margin-left: 8px;
  padding: 4px 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: opacity 0.15s ease-out;
}

.voice-btn:active {
  opacity: 0.7;
}

.voice-icon {
  width: 28px;
  height: 28px;
}

/* ============================================
