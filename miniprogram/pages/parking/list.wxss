/* pages/parking/list.wxss - Glassmorphism Design Style */

.parking-container {
  padding: 16px;
  padding-bottom: 80px; /* 为底部导航栏留出空间 */
  background: transparent;
  min-height: calc(100vh - 60px); /* 减去导航栏高度 */
  box-sizing: border-box;
}

/* ============================================
   Search Bar - Glassmorphism
   ============================================ */
.search-bar {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 16px 0;
  margin-bottom: 16px;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  padding: 0 24px;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  margin: 0 16px;
  transition: all 0.3s ease;
}

.search-input-wrapper:active {
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.08);
}

.search-icon {
  font-size: 18px;
  margin-right: 8px;
  color: rgba(26, 26, 26, 0.8);
  opacity: 0.8;
}

.search-input-wrapper input {
  flex: 1;
  height: 44px;
  font-size: 15px;
  color: #1a1a1a;
  background-color: transparent;
  border: none;
}

.search-input-wrapper input::placeholder {
  color: rgba(26, 26, 26, 0.6);
  opacity: 0.8;
}

/* ============================================
   Filter Bar - Glassmorphism
   ============================================ */
.filter-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 8px 0;
  margin-bottom: 16px;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16px 0;
  font-size: 15px;
  color: rgba(26, 26, 26, 0.8);
  position: relative;
  font-weight: 500;
  transition: color 0.3s ease;
}

.filter-item.active {
  color: #1a1a1a;
  font-weight: 600;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30px;
  height: 3px;
  background-color: #1a1a1a;
  border-radius: 9999px;
  box-shadow: 0 2px 8px rgba(255, 255, 255, 0.5);
}

/* ============================================
   Area Filter - Glassmorphism
   ============================================ */
.area-filter {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 16px;
  margin-bottom: 16px;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.area-filter-title {
  font-size: 15px;
  color: rgba(26, 26, 26, 0.8);
  margin-bottom: 16px;
  font-weight: 500;
}

.area-scroll {
  white-space: nowrap;
}

.area-item {
  display: inline-block;
  padding: 8px 24px;
  margin-right: 8px;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 13px;
  color: rgba(26, 26, 26, 0.8);
  transition: all 0.3s ease;
  font-weight: 500;
  box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.2);
}

.area-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.area-item.active {
  background: rgba(255, 255, 255, 0.4);
  color: #1a1a1a;
  border-color: rgba(0, 0, 0, 0.2);
  font-weight: 600;
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.area-item:last-child {
  margin-right: 0;
}

/* ============================================
   Parking List - Glassmorphism
   ============================================ */
.parking-list {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.parking-item {
  display: flex;
  padding: 24px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s ease;
}

.parking-item:last-child {
  border-bottom: none;
}

.parking-item:active {
  background: rgba(255, 255, 255, 0.8);
}

.parking-image {
  width: 80px;
  height: 80px;
  border-radius: 16px;
  overflow: hidden;
  margin-right: 16px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0.2) 100%);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.parking-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 广州塔图片显示右侧部分 */
.parking-img[src*="cantontower"] {
  object-position: right center;
}

.parking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.parking-name {
  font-size: 17px;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4px;
  letter-spacing: -0.01em;}

.parking-address {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.7);
  margin-bottom: 16px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.parking-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
  flex-wrap: wrap;
  gap: 4px;
}

.distance, .area, .price, .rating {
  font-size: 11px;
  color: rgba(26, 26, 26, 0.7);
  font-weight: 500;
}

.area {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #1a1a1a;
  padding: 4px 10px;
  border-radius: 12px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 11px;
  font-weight: 600;
}

.price {
  color: #1a1a1a;
  font-weight: 600;}

.rating {
  color: #ffd43b;
}

.available-spots {
  display: flex;
  align-items: baseline;
  gap: 4px;
}

.available-count {
  font-size: 20px;
  font-weight: 700;
  color: #51cf66;
  letter-spacing: -0.02em;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.available-label {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.7);
  font-weight: 400;
}

/* ============================================
   Empty State - Glassmorphism
   ============================================ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 0;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 24px;
  opacity: 0.5;
}

.empty-state text {
  font-size: 15px;
  color: rgba(26, 26, 26, 0.7);
  font-weight: 500;
}

/* ============================================
   Load More - Glassmorphism
   ============================================ */
.load-more {
  text-align: center;
  padding: 24px 0;
  color: rgba(26, 26, 26, 0.7);
  font-size: 13px;
  font-weight: 500;
}

.load-more text {
  display: inline-block;
  padding: 8px 32px;
  border-radius: 20px;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  color: #1a1a1a;
}

.load-more text:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.95);
  box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.08);
}

/* ============================================
   Responsive Adjustments
   ============================================ */
@media screen and (min-width: 768px) {
  .parking-container {
    padding: 24px;
    max-width: 768px;
    margin: 0 auto;
  }
}
