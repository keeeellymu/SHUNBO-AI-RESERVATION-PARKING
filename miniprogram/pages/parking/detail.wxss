/* pages/parking/detail.wxss - Glassmorphism Design Style */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f5f7 0%, #ffffff 100%);
  background-attachment: fixed;
  padding-bottom: 80px;
}

/* 加载状态样式 - Glassmorphism */
.loading {
  padding: 64px 0;
  text-align: center;
  background: transparent;
}

.loading-spinner {
  width: 36px;
  height: 36px;
  margin: 0 auto 16px;
  border: 3px solid rgba(26, 26, 26, 0.2);
  border-top-color: #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: rgba(26, 26, 26, 0.7);
}

/* 错误状态样式 - Glassmorphism */
.error {
  padding: 64px 0;
  text-align: center;
  background: transparent;
}

.error-text {
  font-size: 14px;
  color: #ff4d4f;
  margin-bottom: 16px;
  display: block;
}

.retry-btn {
  background: rgba(74, 144, 226, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #ffffff;
  font-size: 14px;
  padding: 0 24px;
  border-radius: 12px;
  border: 1px solid rgba(74, 144, 226, 0.3);
}

/* 滚动容器 */
.detail-scroll {
  min-height: 100vh;
  padding-bottom: 80px;
}

/* 添加淡入过渡效果 */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 优化加载指示器，使其在页面切换时更加友好 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  z-index: 999;
}

/* 优化页面整体布局，减少布局抖动 */
.parking-header,
.action-buttons,
.detail-section {
  position: relative;
  overflow: hidden;
}

/* 停车场头部信息 - Glassmorphism */
.parking-header {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  padding: 20px;
  margin: 16px;
  margin-bottom: 16px;
}

.parking-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.parking-name {
  flex: 1;
  font-size: 20px;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 0;
  letter-spacing: -0.01em;
}

.favorite-btn {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  margin-left: 12px;
}

.favorite-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.08);
}

.favorite-btn.favorited {
  background: rgba(255, 77, 79, 0.1);
  border-color: rgba(255, 77, 79, 0.3);
}

.favorite-icon {
  font-size: 24px;
  line-height: 1;
}

.parking-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  margin-bottom: 12px;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.6);
  margin-right: 4px;
}

.meta-value {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.8);
  font-weight: 500;
}

.meta-value.rating {
  color: #faad14;
  font-weight: 600;
}

.meta-value.area {
  background: rgba(74, 144, 226, 0.15);
  color: #4A90E2;
  padding: 4px 12px;
  border-radius: 12px;
  font-weight: 500;
}

.parking-address {
  font-size: 14px;
  color: rgba(26, 26, 26, 0.7);
  margin-bottom: 12px;
  line-height: 1.5;
}

.parking-status {
  background: rgba(81, 207, 102, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 8px 12px;
  border-radius: 12px;
  border: 1px solid rgba(81, 207, 102, 0.2);
}

.available-text {
  font-size: 13px;
  color: #51cf66;
  font-weight: 600;
}

/* 操作按钮组 - Glassmorphism */
.action-buttons {
  display: flex;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  padding: 16px;
  margin: 0 16px 16px;
  gap: 12px;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12px;
  border-radius: 12px;
  transition: all 0.3s ease;
  border: none;
  background: transparent;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.9);
  transform: scale(0.98);
}

.btn-icon {
  font-size: 20px;
  margin-bottom: 8px;
}

.btn-text {
  font-size: 13px;
  color: #1a1a1a;
  font-weight: 500;
}

.share-btn {
  padding: 0;
  background: transparent;
}

.share-btn::after {
  border: none;
}

/* 详情区块通用样式 - Glassmorphism */
.detail-section {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  padding: 20px;
  margin: 0 16px 16px;
}

.section-title {
  font-size: 18px;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16px;
  letter-spacing: -0.01em;
}

.section-content {
  font-size: 14px;
  color: rgba(26, 26, 26, 0.8);
  line-height: 1.6;
}

/* 停车场介绍 */
.parking-description {
  line-height: 1.6;
  margin-bottom: 16px;
  display: block;
}

.feature-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 16px;
}

.feature-item {
  background: rgba(74, 144, 226, 0.15);
  color: #4A90E2;
  padding: 6px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 500;
  border: 1px solid rgba(74, 144, 226, 0.2);
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 4px 0;
}

.info-label {
  color: rgba(26, 26, 26, 0.6);
  font-weight: 500;
}

.info-value {
  color: rgba(26, 26, 26, 0.8);
  font-weight: 500;
}

/* 可用车位 - Glassmorphism */
.space-sections {
  background: transparent;
}

/* 区域标题栏 - Glassmorphism */
.section-headers {
  display: flex;
  padding: 12px 16px;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 12px 12px 0 0;
  font-size: 14px;
  font-weight: 600;
  color: rgba(26, 26, 26, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: none;
}

.section-header {
  flex: 1;
  text-align: left;
}

.section-header:nth-child(2) {
  text-align: center;
  flex: 0 0 80px;
}

.section-header:nth-child(3) {
  text-align: right;
  flex: 0 0 60px;
}

/* 区域分组列表 - Glassmorphism */
.section-list {
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 0 0 12px 12px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.section-group {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.section-group:last-child {
  border-bottom: none;
}

/* 区域头部 - Glassmorphism */
.section-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  font-weight: 600;
}

.section-info {
  display: flex;
  align-items: center;
  gap: 20px;
}

.section-name {
  font-size: 16px;
  font-weight: 600;
  color: #1a1a1a;
}

.section-count {
  font-size: 14px;
  display: flex;
  align-items: center;
}

.available-count {
  color: #51cf66;
  font-weight: 600;
  margin-right: 2px;
}

.total-count {
  color: rgba(26, 26, 26, 0.6);
}

/* 区域内车位列表 - Glassmorphism */
.section-spaces {
  background: rgba(255, 255, 255, 0.5);
}

/* 车位项 - Glassmorphism */
.space-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  cursor: pointer;
  transition: all 0.3s ease;
  transform: translateZ(0);
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
}

.space-item:first-child {
  border-top: none;
}

.space-item:active {
  background: rgba(255, 255, 255, 0.95);
  transform: scale(0.98) translateZ(0);
}

.space-item.selected {
  background: rgba(74, 144, 226, 0.15);
  border-left: 3px solid #4A90E2;
}

.space-item.unavailable {
  opacity: 0.6;
  cursor: not-allowed;
  /* 不可用状态时禁用点击效果 */
  pointer-events: none;
}

.space-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.space-number {
  font-size: 14px;
  font-weight: 600;
  color: #1a1a1a;
}

.space-type {
  display: flex;
  align-items: center;
}

.ev-badge {
  background: rgba(250, 140, 22, 0.15);
  color: #fa8c16;
  font-size: 11px;
  padding: 4px 8px;
  border-radius: 10px;
  font-weight: 500;
  border: 1px solid rgba(250, 140, 22, 0.2);
}

.space-distance {
  font-size: 12px;
  color: rgba(26, 26, 26, 0.6);
  flex: 0 0 60px;
  text-align: center;
}

.space-status {
  flex: 0 0 50px;
  text-align: right;
}

.status-indicator {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.status-indicator.available {
  background: rgba(81, 207, 102, 0.15);
  color: #51cf66;
  border: 1px solid rgba(81, 207, 102, 0.2);
}

.status-indicator.unavailable {
  background: rgba(255, 77, 79, 0.15);
  color: #ff4d4f;
  border: 1px solid rgba(255, 77, 79, 0.2);
}

/* 无数据状态 - Glassmorphism */
.no-spaces {
  text-align: center;
  padding: 40px 0;
  color: rgba(26, 26, 26, 0.6);
  font-size: 14px;
}

/* 预约表单 */
.booking-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-label {
  font-size: 14px;
  color: #1a1a1a;
  font-weight: 600;
}

/* 预约模式选择卡片样式 */
.mode-selector-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  padding: 8px;
  box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.08);
}

.mode-selector {
  display: flex;
  gap: 8px;
  width: 100%;
}

.mode-option {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-option text {
  font-size: 15px;
  font-weight: 500;
  color: rgba(26, 26, 26, 0.7);
  transition: all 0.3s ease;
}

.mode-option.active {
  background: #4A90E2;
  border-color: #4A90E2;
  box-shadow: 0 2px 8px 0 rgba(74, 144, 226, 0.3);
}

.mode-option.active text {
  color: #ffffff;
  font-weight: 600;
}

.mode-option:active {
  transform: scale(0.98);
}

/* 倒计时框样式 */
.countdown-box {
  background: rgba(255, 193, 7, 0.1);
  border: 1px solid rgba(255, 193, 7, 0.3);
  border-radius: 12px;
  padding: 16px;
  margin-top: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.countdown-label {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.7);
  text-align: center;
}

.countdown-time {
  font-size: 32px;
  font-weight: 700;
  color: #ff9800;
  font-family: 'Courier New', monospace;
  letter-spacing: 2px;
}

/* 时间选择器组样式 */
.time-selector-group {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-top: 8px;
}

.time-picker {
  height: 44px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.time-picker:active {
  background: rgba(255, 255, 255, 0.9);
  border-color: rgba(74, 144, 226, 0.3);
}

.time-picker text {
  font-size: 14px;
  color: #1a1a1a;
  font-weight: 500;
}

.form-input {
  height: 44px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  padding: 0 16px;
  font-size: 14px;
  color: #1a1a1a;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.form-input:focus {
  border-color: #4A90E2;
  outline: none;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.1);
}

.form-picker {
  height: 44px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.picker-text {
  font-size: 14px;
  color: #1a1a1a;
  font-weight: 500;
}

/* 车牌选择器样式 - Glassmorphism */
.vehicle-selector {
  height: 44px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.vehicle-selector:active {
  background: rgba(255, 255, 255, 0.9);
  border-color: rgba(74, 144, 226, 0.3);
}

.vehicle-number {
  font-size: 14px;
  color: #1a1a1a;
  font-weight: 500;
}

.arrow-icon {
  font-size: 16px;
  color: rgba(26, 26, 26, 0.6);
}

/* 模态框样式 */
.vehicle-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 20px 20px 0 0;
  max-height: 80vh;
  overflow: hidden;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 18px;
  font-weight: 700;
  color: #1a1a1a;
}

.modal-close {
  font-size: 24px;
  color: rgba(26, 26, 26, 0.6);
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(0, 0, 0, 0.1);
}

.vehicle-list {
  max-height: 60vh;
  overflow-y: auto;
}

.vehicle-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.vehicle-item:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.98);
}

.vehicle-item.selected {
  background: rgba(74, 144, 226, 0.15);
}

.vehicle-info {
  flex: 1;
}

.plate-number {
  font-size: 16px;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4px;
  display: block;
}

.vehicle-type {
  font-size: 12px;
  color: rgba(26, 26, 26, 0.7);
}

.check-icon {
  font-size: 18px;
  color: #4A90E2;
  font-weight: bold;
}

/* 底部预约按钮 - Glassmorphism */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  padding: 12px 16px;
  box-shadow: 0 -4px 16px rgba(0, 0, 0, 0.1);
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.book-btn {
  background: #4A90E2;
  color: #ffffff;
  font-size: 16px;
  font-weight: 600;
  height: 48px;
  line-height: 48px;
  border-radius: 12px;
  border: none;
  box-shadow: 0 4px 12px 0 rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.book-btn:active {
  background: #357ABD;
  transform: scale(0.98);
  box-shadow: 0 2px 8px 0 rgba(74, 144, 226, 0.2);
}

/* 适配不同屏幕尺寸 */
@media (min-width: 768px) {
  .spaces-list {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .container {
    max-width: 768px;
    margin: 0 auto;
  }
}