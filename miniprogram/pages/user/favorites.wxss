.favorites-page {
  padding: 16px;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f5f5f7 0%, #ffffff 100%);
  min-height: 100vh;
}

.favorites-list {
  max-height: calc(100vh - 32px);
}

.favorite-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 18px;
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  margin-bottom: 14px;
}

.card-main {
  display: flex;
}

.card-image {
  width: 110px;
  height: 90px;
  flex-shrink: 0;
}

.card-content {
  flex: 1;
  padding: 10px 12px 8px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4px;
}

.card-title {
  font-size: 15px;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  margin-right: 8px;
}

.tag-area .tag {
  font-size: 11px;
  padding: 2px 8px;
  border-radius: 999px;
  background: rgba(74, 144, 226, 0.12);
  color: #4a90e2;
}

.card-address {
  font-size: 12px;
  color: rgba(26, 26, 26, 0.7);
  margin-bottom: 4px;
}

.card-meta {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: rgba(26, 26, 26, 0.8);
}

.card-actions {
  padding: 8px 12px 10px;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: flex-end;
}

.unfavorite-btn {
  font-size: 13px;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
  border: 1px solid rgba(255, 107, 107, 0.3);
}

.unfavorite-btn::after {
  border: none;
}

.empty {
  padding: 80px 20px;
  text-align: center;
}

.empty-icon {
  font-size: 56px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 16px;
  color: rgba(26, 26, 26, 0.75);
  margin-bottom: 4px;
  font-weight: 500;
}

.empty-hint {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.55);
}


