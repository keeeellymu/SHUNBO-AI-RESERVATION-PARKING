.about-page {
  padding: 16px;
  padding-bottom: 40px;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f5f5f7 0%, #ffffff 100%);
  min-height: 100vh;
}

.hero-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20px;
  padding: 20px 18px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  margin-bottom: 16px;
}

.hero-title {
  font-size: 20px;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 6px;
}

.hero-subtitle {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.7);
  margin-bottom: 10px;
}

.hero-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag {
  font-size: 11px;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(74, 144, 226, 0.08);
  color: #4a90e2;
}

.section-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 18px;
  padding: 16px 14px 14px;
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.06);
  margin-bottom: 14px;
}

.section-title {
  font-size: 15px;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 10px;
  padding-left: 6px;
  border-left: 3px solid rgba(74, 144, 226, 0.6);
}

.section-content text {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.8);
  line-height: 1.6;
}

.feature-item {
  display: flex;
  margin-bottom: 10px;
}

.feature-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #4a90e2;
  margin-top: 7px;
  margin-right: 8px;
}

.feature-text {
  flex: 1;
}

.feature-title {
  font-size: 13px;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 2px;
}

.feature-desc {
  font-size: 12px;
  color: rgba(26, 26, 26, 0.7);
  line-height: 1.6;
}

.qa-item {
  margin-bottom: 10px;
}

.qa-q {
  font-size: 13px;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 2px;
}

.qa-a {
  font-size: 12px;
  color: rgba(26, 26, 26, 0.75);
  line-height: 1.6;
}

.footer {
  margin-top: 8px;
  font-size: 11px;
  color: rgba(26, 26, 26, 0.5);
  text-align: center;
}


