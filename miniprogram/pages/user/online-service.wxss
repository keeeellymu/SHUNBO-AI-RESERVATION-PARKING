.chat-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f7;
}

.chat-window {
  flex: 1;
  padding: 12px 12px 4px;
  box-sizing: border-box;
}

.msg-item {
  max-width: 80%;
  margin-bottom: 8px;
  display: flex;
}

.msg-user {
  justify-content: flex-end;
}

.msg-bot {
  justify-content: flex-start;
}

.msg-bubble {
  padding: 8px 12px;
  border-radius: 16px;
  font-size: 14px;
  line-height: 1.5;
  word-break: break-all;
}

.msg-user .msg-bubble {
  background: #4a90e2;
  color: #fff;
  border-bottom-right-radius: 4px;
}

.msg-bot .msg-bubble {
  background: #ffffff;
  color: #333;
  border-bottom-left-radius: 4px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
}

.input-bar {
  display: flex;
  padding: 8px 10px;
  box-sizing: border-box;
  border-top: 1px solid #e5e5ea;
  background: #ffffff;
}

.msg-input {
  flex: 1;
  height: 36px;
  padding: 0 10px;
  border-radius: 18px;
  background: #f2f2f7;
  font-size: 14px;
}

.send-btn {
  margin-left: 8px;
  padding: 0 14px;
  height: 36px;
  line-height: 36px;
  border-radius: 18px;
  font-size: 14px;
  background: #4a90e2;
  color: #fff;
}


