/* pages/voice/voice.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.recognition-area {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.text-display {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.text-content {
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  min-height: 100rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.result-area {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.result-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.result-message {
  display: block;
  font-size: 30rpx;
  color: #4A90E2;
  margin-bottom: 20rpx;
}

.result-data {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.data-label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.data-content {
  display: block;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.error-area {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.error-message {
  display: block;
  font-size: 28rpx;
  color: #ff4444;
}

.button-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.record-button-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.record-button {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background-color: #4A90E2;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s;
}

.record-button.recording {
  background-color: #ff4444;
  box-shadow: 0 4rpx 20rpx rgba(255, 68, 68, 0.3);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
}

.tips {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

