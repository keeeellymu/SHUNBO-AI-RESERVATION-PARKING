/* pages/parking/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载和错误状态样式 */
.loading, .error, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  color: #666;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error button {
  margin-top: 20rpx;
  background-color: #1677ff;
  color: white;
}

/* 详情内容样式 */
.detail-content {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
}

.parking-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.info-section {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-item .label {
  width: 160rpx;
  color: #999;
}

.info-item .value {
  flex: 1;
  color: #333;
  word-break: break-all;
}

.info-item .value.available {
  color: #00b42a;
  font-weight: bold;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons button {
  flex: 1;
  margin: 0;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.navigate-btn {
  border: 1px solid #1890ff;
  color: #1890ff;
  background-color: white;
}

.reserve-btn {
  background-color: #1890ff;
  color: white;
}