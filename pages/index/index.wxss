/* pages/index/index.wxss */

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 16px;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20px;
  padding: 10px 16px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.icon-search {
  margin-right: 8px;
  color: #999999;
}

.placeholder {
  color: #999999;
}

/* 轮播图样式 */
.banner {
  margin-bottom: 20px;
}

.swiper {
  width: 100%;
  height: 150px;
  border-radius: 8px;
  overflow: hidden;
}

.banner-item {
  width: 100%;
  height: 150px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 18px;
  font-weight: bold;
}

/* 快捷入口样式 */
.quick-entry {
  display: flex;
  background-color: #ffffff;
  border-radius: 8px;
  padding: 20px 0;
  margin-bottom: 20px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.entry-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.entry-icon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-bottom: 8px;
}

.entry-text {
  font-size: 12px;
  color: #666666;
}

/* 分区标题样式 */
.section {
  margin-bottom: 20px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
}

.section-more {
  display: flex;
  align-items: center;
  color: #999999;
}

.icon-arrow {
  margin-left: 4px;
  font-size: 16px;
}

/* 停车场列表样式 */
.parking-list {
  background-color: #ffffff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.parking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.parking-item:last-child {
  border-bottom: none;
}

.parking-info {
  flex: 1;
  margin-right: 12px;
}

.parking-name {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4px;
}

.parking-address {
  font-size: 12px;
  color: #666666;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.parking-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999999;
}

.distance {
  margin-right: 16px;
}

.price {
  color: #ff6b6b;
  font-weight: 500;
}

.parking-status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  margin-bottom: 4px;
}

.status-text {
  font-size: 12px;
  color: #666666;
}

/* 公告栏样式 */
.notice {
  display: flex;
  align-items: center;
  background-color: #fff9e6;
  border: 1px solid #ffd591;
  border-radius: 4px;
  padding: 12px;
  margin-bottom: 20px;
}

.notice-icon {
  margin-right: 8px;
  font-size: 16px;
}

.notice-text {
  font-size: 12px;
  color: #d46b08;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}