/* app.wxss */

/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
  background-color: #f5f5f5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 重置样式 */
page,
view,
text,
image,
button,
input,
textarea,
label,
navigator,
scroll-view {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 通用样式类 */
.container {
  padding: 16px;
  box-sizing: border-box;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mt-8 {
  margin-top: 8px;
}

.mt-16 {
  margin-top: 16px;
}

.mb-8 {
  margin-bottom: 8px;
}

.mb-16 {
  margin-bottom: 16px;
}

.p-16 {
  padding: 16px;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn {
  display: block;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #1890ff;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #096dd9;
}

.btn-default {
  background-color: #ffffff;
  color: #333333;
  border: 1px solid #d9d9d9;
}

.btn-default:active {
  background-color: #f5f5f5;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  font-size: 14px;
  background-color: #ffffff;
  transition: border-color 0.3s;
}

.input:focus {
  border-color: #1890ff;
  outline: none;
}

/* 图标样式 */
.icon {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

/* 加载状态 */
.loading {
  padding: 32px 0;
  text-align: center;
}

/* 空状态 */
.empty {
  padding: 48px 0;
  text-align: center;
  color: #999999;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
  opacity: 0.5;
}

/* 错误提示 */
.error-message {
  color: #ff4d4f;
  font-size: 12px;
  margin-top: 4px;
}

/* 成功提示 */
.success-message {
  color: #52c41a;
  font-size: 12px;
  margin-top: 4px;
}

/* 滚动条隐藏 */
::-webkit-scrollbar {
  display: none;
}

/* 适配底部安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}